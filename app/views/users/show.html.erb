<div class="container flexcenter">
<div class="row">
<div class="col-sm">

  <div class="ektitle ektitlediv">
    <p>
      <%= link_to 'keyboard_return', users_path, class:"material-icons returnicon" %>
      <%= link_to 'Return', users_path, class:"returnicon returnword" %>
      <div class="flexcenter">
        <p class="favtitle">
          <%= @user.name %>
          <% if patron_signed_in? %>
            <% if @is_favourite %>
              &nbsp;<%= button_to 'favorite', favourite_delete_path(current_patron), method: :delete, params: { user_id: @user.id }, class:"favouritebtn flexcenter material-icons", data: {toggle: "tooltip", placement: "top" }, title: "Remove From Favourites!" %>
            <% else %>
              &nbsp;<%= button_to 'favorite_border', patron_favourites_path(current_patron), method: :post, params: { user_id: @user.id }, class:"favouritebtn flexcenter material-icons", data: {toggle: "tooltip", placement: "top" }, title: "Add To Favourites!" %>
            <% end %>
          <% end %>
        </p>
      </div>
    </p>
  </div>

  <div class="table-index-container">

    <div class="user-seater-div">
      <p><%= image_tag("2seaterv2.png", size: "200x200") %></p>

      <div>
        <%= image_tag("splash.png", size: "150x70") %>
        <h5 class="seater-text"><strong>2-Seaters</strong></h5><br/>
      </div>

      <div class="card user-available-card"><div class="card-body">
        <h5>Tables available: <%= @two_seaters_free.count %> / <%= @two_seaters_total %></h5>
      </div></div>
    </div>

    <div class="user-seater-div">
      <p><%= image_tag("4seater.png", size: "200x200") %></p>

      <div>
        <%= image_tag("splash.png", size: "150x70") %>
        <h5 class="seater-text"><strong>4-Seaters</strong></h5><br/>
      </div>

      <div class="card user-available-card"><div class="card-body">
        <h5>Tables available: <%= @four_seaters_free.count  %> / <%= @four_seaters_total %></h5>
      </div></div>
    </div>

    <div class="user-seater-div">
      <p><%= image_tag("6seater.png", size: "200x200") %></p>

      <div>
        <%= image_tag("splash.png", size: "150x70") %>
        <h5 class="seater-text"><strong>4-Seaters</strong></h5><br/>
      </div>

      <div class="card user-available-card"><div class="card-body">
        <h5>Tables available: <%= @six_seaters_free.count  %> / <%= @six_seaters_total %></h5>
      </div></div>
    </div>

  </div>

  <div class="flexcenter flexcolumn">
    <p><strong>Address</strong>: &nbsp;8 Claymore Hill, Singapore 168888</p>
    <p><strong>Contact</strong>: &nbsp;6888-6888</p>

    <div class="user-detail-div">
      <%= image_tag("splashsm.png", size: "100x35", class:"booknow-splash") %>
      <%= button_to 'Book now!', patron_bookings_path(current_patron), method: :post, params: { user_id: @user.id }, class:"booknowbtn"%>
    </div>
  </div>

  <br/>
  <br/>

</div>
</div>
</div>