<div class="container table-index-container">
<div class="row">
<div class="col-sm">

  <div class="ektitle ektitlediv">
  <p>Check Out The Crowds At These Restaurants</p>
  </div>

    <div class="userindexdiv">
      <% @users.each do |user| %>
        <div class="card ekusercard" style="width: 18rem;">
          <%= link_to image_tag("cardboard_bg.jpg", class:"card-img-top ekcardimg"), user_path(user) %>
          <div class="card-body">
            <h5 class="card-title"><%= user.name %></h5>

            <div class="detaildiv">
            <%= image_tag("splashsm.png", size: "100x35") %>
            <%= link_to 'Details', user_path(user), class: "btn btn-sm ekdetailbtn" %>
            </div><br/>

            <% if @users_info[user.id][:total_tables_count] == 0 %>
              <p class="card-text">No tables available currently.</p>
            <% else %>
              <%= @users_info[user.id][:free_tables_count] %> Tables Available
              <% if @users_info[user.id][:free_tables_count].to_f / @users_info[user.id][:total_tables_count].to_f < 0.2 %>
                <p class="small" style="color: #AC3B61;"><strong>Filling up fast!</strong></p>
              <% elsif  @users_info[user.id][:free_tables_count].to_f / @users_info[user.id][:total_tables_count].to_f < 0.5 %>
                <p class="small" style="color:orange"><strong>More than half tables are taken!</strong></p>
              <% end %>
            <% end %>

          </div>
        </div>
      <% end %>
    </div>

</div>
</div>
</div>
